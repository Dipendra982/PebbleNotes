# PebbleNotes Database Environment Configuration
# Copy this file to .env and update values as needed

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pebblenotes
DB_USER=postgres
DB_PASSWORD=root

# Full Connection String
DATABASE_URL=postgresql://postgres:root@localhost:5432/pebblenotes

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# SSL Configuration (for production)
DB_SSL=false

# pgAdmin Configuration (if using pgAdmin)
PGADMIN_EMAIL=admin@pebblenotes.com
PGADMIN_PASSWORD=root
