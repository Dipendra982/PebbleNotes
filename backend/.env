# PebbleNotes Backend Environment Configuration

# Server
PORT=4000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pebblenotes
DB_USER=postgres
DB_PASSWORD=root
DATABASE_URL=postgresql://postgres:root@localhost:5432/pebblenotes

# JWT Secrets
