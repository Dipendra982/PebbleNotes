# PebbleNotes Backend Environment Configuration
# Copy this file to .env

# Server
PORT=4000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pebblenotes
DB_USER=postgres
DB_PASSWORD=root
DATABASE_URL=postgresql://postgres:root@localhost:5432/pebblenotes

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Khalti Payment Gateway
KHALTI_SECRET_KEY=your-khalti-secret-key
KHALTI_PUBLIC_KEY=your-khalti-public-key

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# File Upload (Cloudinary or S3)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend URL (for verification links)
BACKEND_URL=http://localhost:4000

# SMTP (real email sending)
# Configure these with your provider (SendGrid, Brevo, Mailgun, Gmail app password, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
# true for 465, false for 587
SMTP_SECURE=true
SMTP_USER=sahdipendra400@gmail.com
SMTP_PASS=hmxn oova tzrg uwgt
# The From header used in emails
SMTP_FROM="PebbleNotes <no-reply@yourdomain.com>"

# Optional: local admin bypass for uploads
ADMIN_DEV_PASSWORD=admin1234
